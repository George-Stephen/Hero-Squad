{{#partial "content"}}

    <h1>Fill in your name and your friend's name to create your custom greeting!</h1>
    <form action='/Squad/new'>
        <div class="form-group">
            <label for="squad_serial">squad_serial</label>
            <input id="squad_serial" name="squad_serial" class="form-control" type="number">
        </div>
        <div class="form-group">
            <label for="squad_Name">squad_Name</label>
            <input id="squad_Name" name="squad_Name" class="form-control" type="text">
        </div>
        <div class="form-group">
            <label for="leader">leader</label>
            <input id="leader" name="leader" class="form-control" type="text">
        </div>
        <div class="form-group">
            <label for="cause">cause</label>
            <input id="cause" name="cause" class="form-control" type="text">
        </div>
        <div class="form-group">
            <label for="max">maximum Members</label>
            <input id="max" name="max" class="form-control" type="number">
        </div>
        <button type="submit" class="btn btn-success">Go!</button>
    </form>
